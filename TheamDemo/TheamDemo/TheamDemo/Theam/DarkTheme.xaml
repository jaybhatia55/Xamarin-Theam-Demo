<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="TheamDemo.Theam.DarkTheme">

     <Color x:Key="background">#000000</Color>

    <Color x:Key="lablecolor">#FFFFFF</Color>

   
     <Color x:Key="navigationbarcolor">#FA8072</Color>
     <Color x:Key="navigationbartextcolor">#FFFFFF</Color>

    <Style TargetType="{x:Type NavigationPage}">
            <Setter Property="BarBackgroundColor"
                    Value="{DynamicResource  navigationbarcolor}" />
             <Setter Property="BarTextColor"
                    Value="{DynamicResource navigationbartextcolor}" />           
        </Style>

</ResourceDictionary>
